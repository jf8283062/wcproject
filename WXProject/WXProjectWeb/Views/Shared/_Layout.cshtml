<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>微信后台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/vue-resource.common.js"></script>
    <script src="~/Content/dist/iview.min.js"></script>
    <link href="~/Content/dist/styles/iview.css" rel="stylesheet" />


    @*<script src="~/Scripts/bootstrap.min.js"></script>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" />*@
    <style type="text/css">
        .navigate a {
            color: #000;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("微信后台管理系统", "Index", "CMS", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div style="margin:60px auto;width:1180px;" class="wrapper-container">
        <div class="ivu-row">
            <div class="wrapper-navigate ivu-col ivu-col-span-4">
                <div class="navigate">
                    <ul class="ivu-menu ivu-menu-light ivu-menu-vertical" style="width: auto;">
                        <li class="ivu-menu-item @if (ViewBag.Tab=="button")
	{
		@:ivu-menu-item-active ivu-menu-item-selected
	} "><a href="/CMS/EditButton">按钮设置 </a></li>
                        <li class="ivu-menu-item @if (ViewBag.Tab=="res")
	{
		@:ivu-menu-item-active ivu-menu-item-selected
	}"><a href="/CMS/EditResponse">自动回复</a></li>
                    </ul>
                </div>
            </div>
            <div class="ivu-col ivu-col-span-20">
                <div class="wrapper-content ivu-article">
                    <article style="padding: 20px 0px;">
                        @RenderBody()
                    </article>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
