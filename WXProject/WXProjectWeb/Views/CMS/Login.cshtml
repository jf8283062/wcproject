                            }
                        } else {
                            alert("账户或密码错误！请从新输入！")
                        }
                    } else {
                        alert(data);
                        alert("发生异常！请联系管理员或稍后再试！")
                    }
                }

            })
            console.log(remeber);
        }
    </script>
</body>
</html>